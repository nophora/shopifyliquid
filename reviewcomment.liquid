<style>
    .writewrap{
      display: flex;
      width: 100%;
      height: max-content;
      flex-wrap: wrap;
      justify-content: center;
      min-height: 400px;
      border: 2px solid rgba(0, 0, 0, 0);
      background-color: rgba(63, 0, 253, 0);
    }
.writereview{
    margin-top: 5px;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 300px;
      height: max-content;
      min-height: 340px;
      border: 2px solid rgba(0, 0, 0, 0);
      background-color: rgba(235, 0, 0, 0);
    }    
    .writereview1{
      display: flex;
      flex-direction: column;
      width: 100%;
      height: 280px;
      background-color: rgba(0, 235, 20, 0);
    }   
    .reviewbutton{
        margin-top: 9px;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 190px;
      height: 45px;
      border-radius: 2px;
      border: 1px solid rgba(225, 225, 225, 0.652);
      background-color: rgba(39, 0, 235, 0);
      cursor: pointer;
    } 

    .reviewbutton:hover{
        background-color: rgba(187, 187, 187, 0.237);
    }

    .commentwpic{
        width: 100%;
      height: max-content;
    }
    .reviewbuttontext{
        font-size: 14px; 
        font-weight: bold;
        font-family: "Jost", sans-serif;
        background-color: rgba(107, 107, 107, 0);
        color: rgba(198, 198, 198, 0.712);
        
    }

    .emailreview{
        margin-left: 5px;
        font-size: 14px; 
        font-weight: bold;
        font-family: "Jost", sans-serif;
        background-color: rgba(107, 107, 107, 0);
        color: rgba(74, 74, 74, 0.908);
    }

    .emailreview1{
      margin-left: 5px;
      outline: none;
      border: 2px solid rgb(200, 200, 200);
      width: 96%;
      height: 35px;
    }

    .textareaview{
        margin-left: 5px;
      outline: none;
      border: 2px solid rgb(200, 200, 200);
      width: 96%;
      height: 120px;
    }

    .emailreview2{
        margin-left: 5px;
        font-size: 14px; 
        font-weight: bold;
        font-family: "Jost", sans-serif;
        background-color: rgba(107, 107, 107, 0);
        color: rgba(74, 74, 74, 0.908);
    }
   
    
</style>


<div id="writewrap" class="writewrap">
   
    <div class="writereview">
        <div class="writereview1">
            <img id="commentwpics" src="https://res.cloudinary.com/platformtour/image/upload/v1715340472/write_an9u6b.jpg" alt="comment-review" class="commentwpic" >
    <p id="emailreview" class="emailreview">Email</p>
    <input
    id="emailreview1"
       class="emailreview1"
       value=''
       placeholder="email required"
     />
    <p value='' placeholder="Write a review" id="emailreview2" class="emailreview2">Review</p>
    <textarea name="textareaview" id="textareaview" class="textareaview" cols="30" rows="10"></textarea>
        </div>
        <div id="reviewbuttontext1" class="reviewbutton">
          <h1 id="reviewbuttontext" class="reviewbuttontext">Write a review</h1>
        </div>
    
    </div>

    </div>

<script>
    let countreview=0
           //document.getElementById("commentwpic").style.display='none'
           document.getElementById("emailreview").style.display='none'
           document.getElementById("emailreview1").style.display='none'
           document.getElementById("emailreview2").style.display='none'
           document.getElementById("textareaview").style.display='none'
const reviewbuttontext = document.getElementById('reviewbuttontext1')
     
         reviewbuttontext.addEventListener('click',()=>{
            if(countreview===0){
      countreview=1
            document.getElementById("commentwpics").style.display='none'
            document.getElementById("emailreview").style.display='flex'
            document.getElementById("emailreview1").style.display='flex'
           document.getElementById("emailreview2").style.display='flex'
           document.getElementById("textareaview").style.display='flex'
           document.getElementById('reviewbuttontext').innerText= 'Submit'
         }
         else{
            countreview='done'
            document.getElementById("commentwpics").style.display='flex'
            document.getElementById("emailreview").style.display='none'
            document.getElementById("emailreview1").style.display='none'
           document.getElementById("emailreview2").style.display='none'
           document.getElementById("textareaview").style.display='none'
           document.getElementById('reviewbuttontext').innerText= 'Review will be validated'
         }
        })
    

</script>
